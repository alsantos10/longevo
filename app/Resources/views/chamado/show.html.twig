{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div class="container">
            <div class="page-header">
                <h1>Atendimento ao cliente</h1>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <form action="" method="POST" id="formchamado" >

                        <div class="form-group">
                            <label for="">Número do Pedido:</label>
                            <span>{% if chamado %} {{chamado.pedido.id}} {% endif %}</span>
                        </div>
                        <div class="form-group">
                            <label for="">Titulo:</label>
                            <span>{% if chamado %} {{chamado.pedido.titulo}} {% endif %}</span>
                        </div>
                        <div class="form-group">
                            <label for="">Email:</label>
                            <span>{% if chamado %} {{chamado.cliente.email}} {% endif %}</span>
                        </div>
                        <div class="form-group">
                            <label for="">Nome do cliente:</label>
                            <span>{% if chamado %} {{chamado.cliente.nome}} {% endif %}</span>
                        </div>
                        <div class="form-group">
                            <label for="">Observação:</label>
                            <span>{% if chamado %} {{chamado.observacao}} {% endif %}</span>
                        </div>
                        <a href="/" class="btn btn-default">Voltar</a>
                    </form>
                </div>
            </div>




        </div>
    </div>
{% endblock %}

{% block stylesheets %}

{% endblock %}
