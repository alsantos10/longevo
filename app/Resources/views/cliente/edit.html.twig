{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div class="container">
            <div class="page-header">
                <h1>Cliente</h1>
            </div>

            <div class="row">
                <div class="col-md-12">
                    {% if cliente %}

                        <form action="{{action}}" method="POST" >
                            <input type="hidden" name="id" value="{{ cliente.id }}">

                            <div class="form-group">
                                <label for="">Nome completo:</label>
                                <input type="text" name="nome" required="required" class="form-control" placeholder="Nome" value="{{ cliente.nome }}">
                            </div>
                            <div class="form-group">
                                <label for="">Email:</label>
                                <input type="email" name="email" required="required" class="form-control" placeholder="Email" value="{{ cliente.email }}">
                            </div>

                            <button type="submit" class="btn btn-primary">Enviar</button>
                            <a href="/clientes" class="btn btn-default">Voltar</a>

                        </form>
                    {% else %}
                        Nenhum cliente encontrado                    
                        <a href="/clientes" class="btn btn-default">Voltar</a>

                    {% endif %}
                </div>
            </div>


        </div>
    </div>
{% endblock %}

{% block stylesheets %}

{% endblock %}
